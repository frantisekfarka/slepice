#!/bin/sh

OTT_DIR="${OTT_DIR:-$(pwd)}"
PATH=$OTT_DIR/ott/bin:$PATH

if `hash ott 2> /dev/null`
then
    echo "ott found"
else
    echo "Installing ott ..."

    PWD=`pwd`
    cd $OTT_DIR
    git clone https://github.com/ott-lang/ott.git ./ott
    cd ott
    git reset --hard 50c0ad4
    make world 

    cd $PWD

fi
